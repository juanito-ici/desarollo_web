<div class="container-fluid">
	<div class="row">
		<h1>Editar Promedio</h1>
		<div class="col-md-6">
			<form method="post" action="/Actualizar">
					<input type="hidden" name="id" value="<%=student[0].id%>">

		        	<div class="form-group">
			        	<label>Nombre : <%=student[0].name%></label>
			        	<label>Apellido <%=student[0].lastname%>"</label>
		        	<div class="form-group">
			        	<label>Promedio</label>
			        	<input value="<%=student[0].average%>" type="number" class="form-control" name="average">
		        	</div>
		        	<div class="form-group">
		        		<input type="submit" class="btn btn-success" name="editar">
		        	</div>
		    </form>
       </div> 
	</div>
</div>